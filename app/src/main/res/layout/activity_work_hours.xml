<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkHours">


    <ImageView
        android:id="@+id/mainPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>


    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Work Hours"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/header"
        android:text="\nSunday           10:00 am - 11:30 pm \n\n---------------------------------------\n\nMonday          10:00 am - 11:30 pm \n\n---------------------------------------\n\nTuesday          10:00 am - 11:30 pm \n\n---------------------------------------\n\nWednesday     10:00 am - 11:30 pm \n\n---------------------------------------\n\nThursday         10:00am - 12:00 am \n\n---------------------------------------\n\nFriday                2:00 pm - 12:00 am  "
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold" />
</RelativeLayout>